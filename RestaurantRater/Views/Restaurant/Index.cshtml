@model IEnumerable<RestaurantRater.Models.Restaurant>

@{
    ViewBag.Title = "Restaurants";
}

<h2>List of Restaurants</h2>

<p>
    @Html.ActionLink("Rate a Restaurant", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th></th>
    </tr>
    @foreach(var restaurant in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(r => restaurant.Name)
            </td>
            <td>
                @Html.DisplayFor(r => restaurant.Address)
            </td>
            <td>
                @Html.DisplayFor(r => restaurant.Rating)
            </td>
            <td>
                @Html.ActionLink("Change", "Edit", new { id = restaurant.RestaurantId })
                @Html.ActionLink("More Info", "Details", new { id = restaurant.RestaurantId })
                @Html.ActionLink("Remove", "Delete", new { id = restaurant.RestaurantId })
            </td>
        </tr>
            }
</table>